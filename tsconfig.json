{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "assets/*": ["src/assets/*"],
      "hooks/*": ["src/hooks/*"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "@utils": ["src/utils/utils.ts"]
    },
    // "typeRoots": ["src/**/*"],
    // "rootDirs": ["/src", "/test", "/mock", "./typings"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["mock/**/*", "src/**/*", "config/**/*", "typings.d.ts"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    // "src/**/*.d.ts",
    // "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
