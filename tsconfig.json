{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"]
    },
    "typeRoots": ["src/**/*"],
    "rootDirs": ["/src", "/test", "/mock", "./typings"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/**/*",
    "typings.d.ts",
    "src/pages/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    // "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
